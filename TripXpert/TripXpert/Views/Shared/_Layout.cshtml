<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/kendo/2017.1.14/kendo.common-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/2017.1.14/kendo.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/kendo/2017.1.14/jquery.min.js"></script>
    <script src="~/Scripts/kendo/2017.1.14/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2017.1.14/kendo.aspnetmvc.min.js"></script>


</head>
<body>
    <div id="wrapper" class="container-fluid" style="position: relative;">
        <div id="header" class="row">
            <div class="col-sm-12">
                <div class="navbar">
                    <div class="navbar-header">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Images/App/trip_xpert_logo.png")" , alt="tripxpert logo" />
                        </a>
                    </div>
                    @(Html.Kendo().ToolBar()
                    .Name("NavigationToolBar")
                    .Items(items =>
                    {
                        items.Add().Type(CommandType.Button).Text("<span>Home</span>").Overflow(ShowInOverflowPopup.Auto).HtmlAttributes(new { @class = "k-button-selected" });
                        items.Add().Type(CommandType.Button).Text("<span>Destinations</span>").Overflow(ShowInOverflowPopup.Auto);
                        items.Add().Type(CommandType.Button).Text("<span>Attractions</span>").Overflow(ShowInOverflowPopup.Auto);
                        items.Add().Type(CommandType.Button).Text("<span>Contact</span>").Overflow(ShowInOverflowPopup.Auto);
                        items.Add().Type(CommandType.ButtonGroup).Id("tx-about-app").Overflow(ShowInOverflowPopup.Auto).Buttons(buttons =>
                        {
                            buttons.Add().Text("About this Sample App").Group("about-app").SpriteCssClass("k-icon k-i-information");
                            buttons.Add().Text("Download Source Code").Group("about-app").SpriteCssClass("k-icon k-icon k-i-download");
                        });
                    })
                    )
                    </div>
                </div>
        </div>
        <div id="main-content" class="row">
            <div class="col-sm-12 tx-col">
                <div class="body-content">
                    <div class="tx-home-image-wrapper" style="height: 400px;">
                        <!--<img src="http://demos.telerik.com/aspnet-ajax/imagegallery/images/gallery/The%20best%20of%20Japan/2000x1125/Kinkaku-ji-Temple_Ivan-zhekov_Attraction.JPG" />-->
                        <div class="tx-home-search-wrapper">
                            @RenderBody()
                        </div>
                    </div>
                    @*<div class="tx-description-box" style="display: block;">
                        <h4 class="tx-description-title">Brazil and Argentina Iguazu Falls - Cristo Redentor (Christ the Redeemer)</h4>
                        <p class="tx-description">A world famous symbol of the city, Christo Redentor towers 710m over the city as an ever present reminder of its heritage.</p>
                    </div>*@
                </div>
            </div>
        </div>
        <div id="footer" class="row">
            <div class="col-sm-12">
                <footer>
                    <p>Copyright  &copy; @DateTime.Now.Year, Progress Software Corporation and/or its subsidiaries or affiliates. All Rights Reserved.</p>
                </footer>
            </div>
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
